# SeaSense AI Trust Engine Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Security
SECRET_KEY=your-secret-key-change-in-production-seasense-2025
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "yourdomain.com"]

# Database
DATABASE_URL=sqlite:///./seasense.db
# For PostgreSQL: postgresql://username:password@localhost/seasense_db

# AI Models Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
MBERT_MODEL=bert-base-multilingual-cased
CLIP_MODEL=openai/clip-vit-base-patch32
YOLO_MODEL=yolov8n.pt

# Trust Scoring Parameters
MIN_TRUST_SCORE=0.0
MAX_TRUST_SCORE=1.0
DEFAULT_TRUST_SCORE=0.5

# Duplicate Detection
SIMILARITY_THRESHOLD=0.8
CLUSTERING_EPS=0.3
MIN_SAMPLES=2

# Social Media API Keys (Optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Processing Limits
MAX_IMAGE_SIZE_MB=10
MAX_TEXT_LENGTH=5000
MAX_BATCH_SIZE=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=ai_trust_engine.log

# Model Paths (if using local models)
MODEL_CACHE_DIR=./models
EMBEDDINGS_CACHE_DIR=./embeddings

# Performance Settings
MAX_WORKERS=4
BATCH_PROCESSING_INTERVAL=60
CLEANUP_INTERVAL=3600
